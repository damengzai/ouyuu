<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text_value_style">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_x</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 弹出的dialog的样式 -->

    <style name="dialog_style" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item><!-- 是否半透明 -->
    </style>
    <style name="button_style">
        <item name="android:background">@color/dodgerblue</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

</resources>